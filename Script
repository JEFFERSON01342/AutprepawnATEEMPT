// ==UserScript==
// @name         TrickSplit Respawn Key (Universal)
// @namespace    http://tampermonkey.net/
// @version      1.2
// @description  Respawn automático al presionar K en TrickSplit.io
// @match        https://tricksplit.io/*
// @grant        none
// ==/UserScript==

(function () {
    console.log("[RespawnKey] Activado (tecla K)");

    document.addEventListener("keydown", function (e) {

        if (e.key.toLowerCase() === "k") {
            console.log("[RespawnKey] Buscando botón de respawn...");

            // Encuentra cualquier botón visible
            const buttons = Array.from(document.querySelectorAll("button"));

            for (const btn of buttons) {
                if (btn && btn.offsetParent !== null) { // visible
                    btn.click();
                    console.log("[RespawnKey] Respawn realizado con:", btn);
                    return;
                }
            }

            console.log("[RespawnKey] No se encontró botón visible :(");
        }
    });
})();
